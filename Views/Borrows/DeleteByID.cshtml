    <div class="display-field" style="display:none;">
        @Html.DisplayFor(model => model.Book.Name)
    </div>
    <div class="display-label" style="display:none;">
        @Html.DisplayNameFor(model => model.MembershipCard.Name)
    </div>
    <div class="display-field" style="display:none;">
        @Html.DisplayFor(model => model.MembershipCard.Name)
    </div>


    @using (Html.BeginForm("DeletePartial", "Borrows"))
    {
        <p>
            <br />
            @Html.HiddenFor(model => model.ID)
            <input type="submit" value="Delete" id="DelButton" class="btn btn-danger" />
        </p>
    }
</body>
</html>

